{
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "target": "es2019",
        "types": [
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "build",
        "rootDir": "src",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    }
}
